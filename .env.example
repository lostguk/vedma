APP_NAME="Laravel Shop"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single,daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# В production используйте файлы секретов вместо переменных окружения
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=shop_db
DB_USERNAME=shop_user
DB_PASSWORD=shop_password

# Redis Configuration  
# Обязательно установите пароль в production
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379

# Cache & Session
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIES=false

# Queue
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcasting
BROADCAST_CONNECTION=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Security Settings
# В production обязательно установите в false
APP_DEBUG=true

# GDPR Compliance
COOKIE_CONSENT_ENABLED=true
DATA_RETENTION_DAYS=1095

# Docker Environment Variables
# Эти переменные устанавливаются автоматически в dev.sh
HOST_UID=1000
HOST_GID=1000
DATA_PATH=./data

# Development Tools
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# API Configuration
API_RATE_LIMIT=100
API_RATE_LIMIT_AUTH=5

# File Upload Limits
MAX_UPLOAD_SIZE=10M
MAX_FILES_COUNT=20

# Security Headers (для nginx)
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# L5 Swagger Configuration
L5_SWAGGER_GENERATE_ALWAYS=true

# Telescope Configuration
TELESCOPE_DRIVER=database
TELESCOPE_PATH=telescope

# Telescope Watchers Configuration
TELESCOPE_CACHE_WATCHER=true
TELESCOPE_COMMAND_WATCHER=true
TELESCOPE_DUMP_WATCHER=true
TELESCOPE_EVENT_WATCHER=true
TELESCOPE_EXCEPTION_WATCHER=true
TELESCOPE_JOB_WATCHER=true
TELESCOPE_LOG_WATCHER=true
TELESCOPE_MAIL_WATCHER=true
TELESCOPE_MODEL_WATCHER=true
TELESCOPE_NOTIFICATION_WATCHER=true
TELESCOPE_QUERY_WATCHER=true
TELESCOPE_REDIS_WATCHER=true
TELESCOPE_REQUEST_WATCHER=true
TELESCOPE_SCHEDULE_WATCHER=true
TELESCOPE_VIEW_WATCHER=true

# Telescope Database Connection
TELESCOPE_DB_CONNECTION=mysql
